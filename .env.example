# ScriptFlow Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///scriptflow.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/scriptflow

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Script Execution Configuration
SCRIPT_TIMEOUT=300  # 5 minutes default timeout
MAX_CONCURRENT_SCRIPTS=10
PYTHON_EXECUTABLE=python3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scriptflow.log

# Security Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds